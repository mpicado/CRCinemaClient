<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".CinemaListActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movies_list"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/movies_list_text"/>

    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movieListView"
            android:layout_below="@+id/movies_list_text"
            android:layout_alignLeft="@+id/movies_list_text"
            android:layout_marginTop="15dp"
            android:divider="#00000000"
            android:dividerHeight="@dimen/activity_divider_height"
            android:paddingLeft="@dimen/activity_padding_left"
            android:paddingRight="@dimen/activity_padding_right"
            android:clipToPadding="false"
            />

</RelativeLayout>
